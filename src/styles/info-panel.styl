.info-panel
  display block
  position fixed
  width 25%
  height 100%
  right -25%
  top 0
  bottom 0
  background $info-panel-background
  z-index 100
  color #41817a
  font-size 14px
  box-shadow 0 0 3px rgba(0, 0, 0, 0.5);

  transform translate3d(100%, 0, 0)

  -webkit-transition transform 400ms

  &__close
    position absolute
    top   10px
    right 15px
    display block
    font-size 12px
    padding 3px 7px
    background #d2dac4
    border-radius 2px
    cursor pointer
    &:hover
      background $info-panel-background

  &._is-opened
    transform translate3d(-100%, 0, 0)

