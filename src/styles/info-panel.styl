.info-panel
  display block
  position fixed
  width 25%
  height 100%
  right -25%
  top 0
  bottom 0
  background $info-panel-background
  z-index 100
  color $info-panel-text-color
  font-size 14px

  transform translate3d(100%, 0, 0)

  -webkit-transition transform 400ms

  &__close
    position absolute
    top   10px
    right 15px
    display block
    font-size 12px
    padding 3px 7px
    background $info-panel-close-background
    color      $info-panel-close-text-color
    border-radius 2px
    cursor pointer
    &:hover
      background $info-panel-background

  &._is-opened
    transform translate3d(-100%, 0, 0)

.item-info
  &__type
    padding 7px 15px
    font-size 12px
    text-transform uppercase
    margin 0
    color $item-info-type-text-color
    background $item-info-type-background

  &__id
    margin 0
    padding 10px 15px
    color $item-info-id-text-color

.item-props
  margin 15px 0
  padding 0
  list-style none

  &__prop
    padding 0 15px
    margin-bottom 5px

  &__key
    display inline-block
    font-weight 800
    color $item-info-props-key-text-color
    margin-right 10px

  &__value
    color $item-info-props-value-text-color

