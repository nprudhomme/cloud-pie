.info-panel
  display block
  position fixed
  width 20%
  height 100%
  right 0
  top 0
  bottom 0
  background $info-panel-background
  z-index 100
  color $info-panel-text-color
  font-size 14px
  transform translate3d(100%, 0, 0)
  -webkit-transition transform 200ms
  box-shadow 0 0 24px rgba(0, 0, 0, 0.35)

  &__close
    position absolute
    top  108px
    left 0
    width  120px
    height 32px
    display block
    font-size 12px
    text-align center
    padding 7px 11px
    background $panel-close-background
    color      $panel-close-text-color
    border-radius 2px
    cursor pointer
    transform-origin 0 100%
    transform rotate(-90deg)
    &:hover
      background $panel-close-background-hover
      color      $panel-close-text-color-hover

  &._is-opened
    transform translate3d(0, 0, 0)

.item-info
  &__type
    padding 7px 15px
    font-size 12px
    text-transform uppercase
    margin 0
    color $item-info-type-text-color
    background $item-info-type-background

  &__id
    margin 0
    padding 10px 15px
    color $item-info-id-text-color

.item-props
  margin 15px 0
  padding 0
  list-style none

  &__prop
    padding 0 15px
    margin-bottom 5px

  &__key
    display inline-block
    font-weight 800
    color $item-info-props-key-text-color
    margin-right 10px

  &__value
    color $item-info-props-value-text-color
