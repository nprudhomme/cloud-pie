.filters-panel
  display block
  position fixed
  width 20%
  height 100%
  left -20%
  top 0
  bottom 0
  background $info-panel-background
  z-index 100
  color $info-panel-text-color
  font-size 14px

  transform translate3d(-100%, 0, 0)

  -webkit-transition transform 400ms

  &__close
    position absolute
    top   10px
    right 15px
    display block
    font-size 12px
    padding 3px 7px
    background $info-panel-close-background
    color      $info-panel-close-text-color
    border-radius 2px
    cursor pointer
    &:hover
      background $info-panel-background

  &._is-opened
    transform translate3d(100%, 0, 0)

.filters
  &__title
    margin 0
    padding 9px 15px
    color #e0c671

  &__controls
    font-size 12px
    cursor pointer
    padding 7px
    background #0a0c15

    &__control
      display inline-block
      padding 4px 8px
      background #202936
      color #697d99
      border-radius 2px
      margin-left 7px
      &:first-child
        margin-left 0

  &__filter
    display block
    padding 7px 15px
    cursor pointer
    color #2c3a47
    border-bottom 1px solid #161d27
    &._is-active
      background #202936
      color #b49b55