@-webkit-keyframes flickerAnimation {
  0%   { opacity: 1;    }
  50%  { opacity: 0.35; }
  100% { opacity: 1;    }
}

.instance
  &__indicator
    fill $instance-indicator-background

  &__wrapper
    stroke-width $instance-border-width
    fill $instance-background
    stroke $instance-border-color
    cursor pointer

  &._is-active
    .instance
      &__wrapper
        stroke $instance-border-color-active
        fill $instance-background-active

      &__indicator
        fill $instance-indicator-background-active

  &:hover
    .instance
      &__wrapper
        fill $instance-background-hover
        stroke $instance-border-color-hover

  &__name
    fill rgb(207, 244, 222)
    font-size 11px

  &__state
    //-webkit-animation: flickerAnimation 2s infinite;

    &--stopped
      fill #da2c1b

    &--running
      fill #99f487